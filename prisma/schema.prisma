generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  ideas Idea[]
}

model Idea {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  aiReply   String?  @db.Text
  market        String?
  techService   String?
  country       String?
  region        String?
  city          String?
  fundingTotal  Int?
  fundingRounds Int?
  createdAt DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
